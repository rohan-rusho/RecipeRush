<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_background">

    <!-- App Name -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RecipeRush"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="12dp"/>

    <!-- Tagline -->
    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover Recipes Instantly"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"/>

    <!-- Recipe Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="24dp"
        android:background="@drawable/card_bg"
        app:cardElevation="12dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/recipeText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="24dp"
            android:text="Press the button to get a recipe!"
            android:textSize="30sp"
            android:textColor="#431256"
            android:textStyle="italic"/>
    </androidx.cardview.widget.CardView>

    <!-- Generate Recipe Button -->
    <Button
        android:id="@+id/generateBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="🍲 Give Me a Recipe"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#8E24AA"
        android:layout_marginBottom="16dp"
        app:cornerRadius="30dp"/>

    <!-- Copy Recipe Button -->
    <Button
        android:id="@+id/copyBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="📋 Copy Recipe"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FB8C00"
        android:layout_marginBottom="16dp"
        app:cornerRadius="30dp"/>

    <!-- Share Recipe Button -->
    <Button
        android:id="@+id/shareBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="📤 Share Recipe"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#66BB6A"
        app:cornerRadius="30dp"/>

</LinearLayout>
